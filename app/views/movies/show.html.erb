<div class="col-md-12">
  <div class="group">

    <span class="pull-right">

      <% if current_user %>

        <% if current_user && current_user.is_member_of?(@movie) %>
          <label class="label label-success">已收藏</label>
          <%= link_to("取消收藏", quit_movie_path(@movie), method: :review, class: "btn btn-default") %>
          <%= link_to("Write a Review", new_movie_review_path(@movie), class: "btn btn-default pull-right") %>
        <% else %>
          <label class="label label-warning">未收藏</label>
          <%= link_to("收藏电影", love_movie_path(@movie), method: :review, class: "btn btn-default") %>
        <% end %>

      <% end %>
    </span>


    <% if current_user && current_user == @movie.user %>
      <%= link_to("Edit Movie", edit_movie_path(@movie), class: "btn btn-primary pull-right") %>
    <% end %>

  </div>
  <h2><%= @movie.title %></h2>
  <p><%= @movie.description %></p>

  <br><br>

    <table class="table">
      <thead>
       <tr>
          <th>影评内容</th>
          <th>发表者</th>
          <th>发表时间</th>
          <th>编辑</th>
        </tr>
      </thead>
      <tbody>
        <% @reviews.each do |review| %>
          <tr>
            <td><%= simple_format(review.content) %></td>
            <td><%= review.user.email %></td>
            <td><%= review.created_at %></td>
            <td><%= link_to('Edit',edit_movie_review_path(review.movie, review), class: "btn btn-default btn-xs") %></td>
            <td><%= link_to('Delete',movie_review_path(review.movie, review), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default btn-xs") %></td>

          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="text-center">
      <%= will_paginate @reviews %>
    </div>

</div>
